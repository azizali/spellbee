---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

// Get all solutions and sort by date (newest first)
const allSolutions = await getCollection('solutions');
const sortedSolutions = allSolutions.sort((a, b) => {
  const dateA = new Date(a.data.date).getTime();
  const dateB = new Date(b.data.date).getTime();
  return dateB - dateA;
});

const latestSolution = sortedSolutions[0];
const { Content } = await latestSolution.render();
const formattedDate = latestSolution.data.date.toLocaleDateString('en-US', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<Layout 
  title={`Today's Spelling Bee Solution - SpellBeeMe`}
  description={`NY Times Spelling Bee solution for ${formattedDate}`}
>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <div class="lg:col-span-2">
      <article class="bg-white dark:bg-slate-900 rounded-lg shadow-md dark:shadow-slate-800 p-6">
        <div class="mb-6 pb-6 border-b border-slate-200 dark:border-slate-700">
          <h1 class="text-4xl font-bold mb-2 bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">
            Today's Solution
          </h1>
          <p class="text-slate-600 dark:text-slate-400">
            {formattedDate}
          </p>
        </div>

        <div class="prose dark:prose-invert max-w-none">
          <Content />
        </div>
      </article>

      <div class="mt-8">
        <p class="text-center text-slate-600 dark:text-slate-400 text-sm">
          Check back tomorrow for the next puzzle solution
        </p>
      </div>
    </div>

    <aside class="lg:col-span-1">
      <div class="bg-white dark:bg-slate-900 rounded-lg shadow-md dark:shadow-slate-800 p-6 sticky top-24">
        <h3 class="text-lg font-semibold mb-4">Quick Stats</h3>
        
        <div class="space-y-4">
          <div>
            <p class="text-sm text-slate-600 dark:text-slate-400">Total Pangrams</p>
            <p class="text-2xl font-bold">{latestSolution.data.pangrams.length}</p>
          </div>

          <div class="pt-4 border-t border-slate-200 dark:border-slate-700">
            <p class="text-sm font-semibold mb-3">Found Pangrams:</p>
            <ul class="space-y-2">
              {latestSolution.data.pangrams.map((pangram: string) => (
                <li class="text-sm bg-blue-50 dark:bg-blue-900/20 text-blue-700 dark:text-blue-300 px-3 py-2 rounded-md font-medium">
                  {pangram}
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>

      <div class="mt-6 bg-white dark:bg-slate-900 rounded-lg shadow-md dark:shadow-slate-800 p-6">
        <h3 class="text-lg font-semibold mb-4">ðŸ’¡ Tip</h3>
        <p class="text-sm text-slate-600 dark:text-slate-400">
          A pangram uses all 9 available letters. Not all puzzles have a pangram!
        </p>
      </div>
    </aside>
  </div>
</Layout>
