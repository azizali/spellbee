---
import { getCollection } from 'astro:content';
import Card from '../components/Card.astro';
import HexagonLetters from '../components/HexagonLetters.astro';
import Layout from '../layouts/Layout.astro';
import { formatDate, parseCollectionDate } from '../utils/dateUtils';

// Get all answers and sort by date (newest first)
const allAnswers = await getCollection('answers');
const sortedAnswers = allAnswers.sort((a, b) => {
  const dateA = parseCollectionDate(a.data.date).getTime();
  const dateB = parseCollectionDate(b.data.date).getTime();
  return dateB - dateA;
});

const latestAnswer = sortedAnswers[0];
const { Content } = await latestAnswer.render();
const formattedDate = formatDate(parseCollectionDate(latestAnswer.data.date));
---

<Layout 
  title={`Today's Spelling Bee Answer - SpellBeeMe`}
  description={`NY Times Spelling Bee answer for ${formattedDate}`}
>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <div class="lg:col-span-2">
      <Card as="article">
        <div class="mb-6 pb-6 border-b border-gray-300">
          <h1 class="text-4xl font-light mb-2 text-nyt-text">
            Today's Answer
          </h1>
          <p class="text-nyt-text-light font-light">
            {formattedDate}
          </p>
        </div>

        <!-- Hexagon Display -->
        <div class="mt-8 mb-8">
          <h2 class="text-2xl font-light mb-6 text-nyt-text">Puzzle Layout</h2>
          <HexagonLetters centerLetter={latestAnswer.data.centerLetter} surroundingLetters={latestAnswer.data.surroundingLetters} />
        </div>

        <div class="prose max-w-none">
          <Content />
        </div>
      </Card>

      <div class="mt-8">
        <p class="text-center text-nyt-text-light text-sm">
          Check back tomorrow for the next puzzle answer
        </p>
      </div>
    </div>

    <aside class="lg:col-span-1">
      <Card class="sticky top-24">
        <h3 class="text-lg font-normal text-nyt-text mb-4">Statistics</h3>
        
        <div class="space-y-4">
          <div>
            <p class="text-sm text-nyt-text-light font-light">Total Pangrams Found</p>
            <p class="text-3xl font-light text-app-yellow">{latestAnswer.data.pangrams.length}</p>
          </div>

          {latestAnswer.data.pangrams.length > 0 && (
            <div class="pt-4 border-t border-gray-300">
              <p class="text-sm font-normal text-nyt-text mb-3">Pangrams</p>
              <ul class="space-y-2">
                {latestAnswer.data.pangrams.map((pangram: string) => (
                  <li class="text-sm bg-app-yellow text-nyt-text px-3 py-2 rounded-md font-medium">
                    {pangram}
                  </li>
                ))}
              </ul>
            </div>
          )}
        </div>
      </Card>

      <Card class="mt-6">
        <h3 class="text-lg font-normal text-nyt-text mb-4">ðŸ’¡ Tip</h3>
        <p class="text-sm text-nyt-text-light font-light">
          A <strong class="font-medium">pangram</strong> uses all 9 available letters in the puzzle. Not all days have a pangram!
        </p>
      </Card>
    </aside>
  </div>
</Layout>
