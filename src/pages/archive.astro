---
import { getCollection } from 'astro:content';
import Card from '../components/Card.astro';
import Layout from '../layouts/Layout.astro';
import { formatDateShort, formatMonthYear, parseCollectionDate } from '../utils/dateUtils';

const allAnswers = await getCollection('answers');
const sortedAnswers = allAnswers.sort((a, b) => {
  const dateA = parseCollectionDate(a.data.date).getTime();
  const dateB = parseCollectionDate(b.data.date).getTime();
  return dateB - dateA;
});

// Group answers by month
const groupedByMonth: Record<string, any[]> = {};

sortedAnswers.forEach((answer) => {
  const date = parseCollectionDate(answer.data.date);
  const monthKey = formatMonthYear(date);
  
  if (!groupedByMonth[monthKey]) {
    groupedByMonth[monthKey] = [];
  }
  groupedByMonth[monthKey].push(answer);
});
---

<Layout 
  title="Answer Archive - SpellBeeMe"
  description="Browse all Spelling Bee answers by date"
>
    <div class="max-w-4xl">
    <div class="mb-10">
      <h1 class="text-4xl font-light mb-3 text-nyt-text">
        Answer Archive
      </h1>
      <p class="text-lg text-nyt-text-light font-light">
        Browse all daily Spelling Bee answers
      </p>
    </div>

    <div class="space-y-10">
      {Object.entries(groupedByMonth).map(([month, answers]) => (
        <div key={month} class="space-y-4">
          <h2 class="text-2xl font-light text-nyt-text sticky top-20 bg-white py-2 z-40">
            {month}
          </h2>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            {answers.map((answer) => {
              const date = parseCollectionDate(answer.data.date);
              const formattedDate = formatDateShort(date);
              
              return (
                <Card
                  key={answer.slug}
                  as="a"
                  href={`/answers/${answer.slug}`}
                  class="group transition-colors duration-200 hover:border-gray-300"
                >
                  <div class="flex items-start justify-between mb-3">
                    <div>
                      <h3 class="font-normal text-lg text-nyt-text group-hover:text-yellow-500 transition-colors">
                        {formattedDate}
                      </h3>
                      <p class="text-sm text-nyt-text-light font-light">
                        {date.toLocaleDateString('en-US', { weekday: 'long' })}
                      </p>
                    </div>
                  </div>

                    <div class="pt-3 border-t border-gray-300">
                    <div class="flex items-center justify-between">
                      <span class="text-sm text-nyt-text-light font-light">
                        {answer.data.pangrams.length} pangram{answer.data.pangrams.length !== 1 ? 's' : ''}
                      </span>
                      <span class="text-app-yellow group-hover:translate-x-1 transition-transform">
                        â†’
                      </span>
                    </div>
                  </div>

                  {answer.data.pangrams.length > 0 && (
                    <div class="mt-3 pt-3 border-t border-gray-300">
                      <p class="text-xs text-nyt-text-light mb-2 font-light">Featured:</p>
                      <div class="flex flex-wrap gap-1">
                        {answer.data.pangrams.slice(0, 2).map((pangram: string) => (
                          <span key={pangram} class="text-xs bg-app-yellow text-nyt-text px-2 py-1 rounded font-medium">
                            {pangram.substring(0, 8)}{pangram.length > 8 ? '...' : ''}
                          </span>
                        ))}
                      </div>
                    </div>
                  )}
                </Card>
              );
            })}
          </div>
        </div>
      ))}
    </div>

    {sortedAnswers.length === 0 && (
      <div class="text-center py-12">
        <p class="text-nyt-text-light mb-4 font-light">No answers yet.</p>
        <a href="/" class="px-4 py-2 bg-app-yellow hover:bg-nyt-gold text-nyt-text rounded-lg transition-colors font-medium inline-block">
          Back to Home
        </a>
      </div>
    )}
  </div>
</Layout>
