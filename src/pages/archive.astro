---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const allSolutions = await getCollection('solutions');
const sortedSolutions = allSolutions.sort((a, b) => {
  const dateA = new Date(a.data.date).getTime();
  const dateB = new Date(b.data.date).getTime();
  return dateB - dateA;
});

// Group solutions by month
const groupedByMonth: Record<string, any[]> = {};

sortedSolutions.forEach((solution) => {
  const date = new Date(solution.data.date);
  const monthKey = date.toLocaleDateString('en-US', { year: 'numeric', month: 'long' });
  
  if (!groupedByMonth[monthKey]) {
    groupedByMonth[monthKey] = [];
  }
  groupedByMonth[monthKey].push(solution);
});
---

<Layout 
  title="Solution Archive - SpellBeeMe"
  description="Browse all Spelling Bee solutions by date"
>
  <div class="max-w-4xl">
    <div class="mb-10">
      <h1 class="text-4xl font-bold mb-3 text-slate-900 dark:text-white">
        Solution Archive
      </h1>
      <p class="text-lg text-slate-600 dark:text-slate-400">
        Browse all daily Spelling Bee solutions
      </p>
    </div>

    <div class="space-y-10">
      {Object.entries(groupedByMonth).map(([month, solutions]) => (
        <div key={month} class="space-y-4">
          <h2 class="text-2xl font-bold text-slate-900 dark:text-white sticky top-20 bg-white dark:bg-slate-950 py-2 z-40">
            {month}
          </h2>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            {solutions.map((solution) => {
              const date = new Date(solution.data.date);
              const formattedDate = date.toLocaleDateString('en-US', {
                weekday: 'short',
                month: 'short',
                day: 'numeric'
              });
              
              return (
                <a 
                  key={solution.slug}
                  href={`/solutions/${solution.slug}`}
                  class="bg-white dark:bg-slate-900 rounded-lg shadow-md dark:shadow-slate-800 p-6 group hover:shadow-lg dark:hover:shadow-blue-900/30 transition-all duration-200 hover:border-blue-300 dark:hover:border-blue-600 border border-transparent"
                >
                  <div class="flex items-start justify-between mb-3">
                    <div>
                      <h3 class="font-semibold text-lg text-slate-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                        {formattedDate}
                      </h3>
                      <p class="text-sm text-slate-500 dark:text-slate-400">
                        {date.toLocaleDateString('en-US', { weekday: 'long' })}
                      </p>
                    </div>
                  </div>

                  <div class="pt-3 border-t border-slate-200 dark:border-slate-700">
                    <div class="flex items-center justify-between">
                      <span class="text-sm text-slate-600 dark:text-slate-400">
                        {solution.data.pangrams.length} pangram{solution.data.pangrams.length !== 1 ? 's' : ''}
                      </span>
                      <span class="text-blue-600 dark:text-blue-400 group-hover:translate-x-1 transition-transform">
                        â†’
                      </span>
                    </div>
                  </div>

                  {solution.data.pangrams.length > 0 && (
                    <div class="mt-3 pt-3 border-t border-slate-200 dark:border-slate-700">
                      <p class="text-xs text-slate-600 dark:text-slate-400 mb-2">Featured:</p>
                      <div class="flex flex-wrap gap-1">
                        {solution.data.pangrams.slice(0, 2).map((pangram: string) => (
                          <span key={pangram} class="text-xs bg-blue-50 dark:bg-blue-900/20 text-blue-700 dark:text-blue-300 px-2 py-1 rounded">
                            {pangram.substring(0, 8)}{pangram.length > 8 ? '...' : ''}
                          </span>
                        ))}
                      </div>
                    </div>
                  )}
                </a>
              );
            })}
          </div>
        </div>
      ))}
    </div>

    {sortedSolutions.length === 0 && (
      <div class="text-center py-12">
        <p class="text-slate-600 dark:text-slate-400 mb-4">No solutions yet.</p>
        <a href="/" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors font-medium inline-block">
          Back to Home
        </a>
      </div>
    )}
  </div>
</Layout>
