---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const solutions = await getCollection('solutions');
  
  return solutions.map((entry) => ({
    params: { 
      date: entry.slug 
    },
    props: { entry },
  }));
}

interface Props {
  entry: any;
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const formattedDate = entry.data.date.toLocaleDateString('en-US', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<Layout 
  title={`Spelling Bee Solution for ${formattedDate} - SpellBeeMe`}
  description={`NY Times Spelling Bee answer for ${formattedDate}`}
>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <div class="lg:col-span-2">
      <article class="bg-white dark:bg-slate-900 rounded-lg shadow-md dark:shadow-slate-800 p-6">
        <div class="mb-6 pb-6 border-b border-slate-200 dark:border-slate-700">
          <a href="/archive" class="text-blue-600 dark:text-blue-400 hover:underline text-sm mb-3 inline-block">
            ‚Üê Back to Archive
          </a>
          <h1 class="text-4xl font-bold mb-2 text-slate-900 dark:text-white">
            {formattedDate}
          </h1>
          <p class="text-slate-600 dark:text-slate-400">
            Spelling Bee Solution #{entry.slug.split('-').slice(-1)[0]}
          </p>
        </div>

        <div class="prose dark:prose-invert max-w-none">
          <Content />
        </div>
      </article>
    </div>

    <aside class="lg:col-span-1">
      <div class="bg-white dark:bg-slate-900 rounded-lg shadow-md dark:shadow-slate-800 p-6 sticky top-24">
        <h3 class="text-lg font-semibold mb-4">Overview</h3>
        
        <div class="space-y-4">
          <div>
            <p class="text-sm text-slate-600 dark:text-slate-400">Date</p>
            <p class="font-semibold">{formattedDate}</p>
          </div>

          <div class="pt-4 border-t border-slate-200 dark:border-slate-700">
            <p class="text-sm text-slate-600 dark:text-slate-400 mb-2">Pangrams Found</p>
            <p class="text-3xl font-bold text-blue-600 dark:text-blue-400">
              {entry.data.pangrams.length}
            </p>
          </div>

          {entry.data.pangrams.length > 0 && (
            <div class="pt-4 border-t border-slate-200 dark:border-slate-700">
              <p class="text-sm font-semibold mb-3">Pangrams:</p>
              <ul class="space-y-2">
                {entry.data.pangrams.map((pangram: string) => (
                  <li class="text-sm bg-blue-50 dark:bg-blue-900/20 text-blue-700 dark:text-blue-300 px-3 py-2 rounded-md font-medium">
                    {pangram}
                  </li>
                ))}
              </ul>
            </div>
          )}
        </div>
      </div>

      <div class="mt-6 bg-white dark:bg-slate-900 rounded-lg shadow-md dark:shadow-slate-800 p-6">
        <h3 class="text-lg font-semibold mb-4">Navigation</h3>
        <div class="space-y-2">
          <a href="/archive" class="px-4 py-2 bg-slate-200 dark:bg-slate-700 text-slate-900 dark:text-slate-50 rounded-lg transition-colors font-medium hover:bg-slate-300 dark:hover:bg-slate-600 block text-center">
            View All Solutions
          </a>
          <a href="/" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors font-medium block text-center">
            Today's Solution
          </a>
        </div>
      </div>
    </aside>
  </div>
</Layout>
