---
import Footer from '../components/Footer.astro';
import Navigation from '../components/Navigation.astro';
import '../styles/globals.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = "Daily Spelling Bee solutions from the NY Times", image = "/og-image.png" } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="twitter:card" content="summary_large_image" />
    <link rel="canonical" href={Astro.url} />
    <link rel="alternate" type="application/rss+xml" href="/rss.xml" />
    <title>{title}</title>
  </head>
  <body class="bg-white dark:bg-slate-950 text-slate-900 dark:text-slate-50 transition-colors duration-300 flex flex-col min-h-screen">
    <Navigation />
    <main class="flex-grow max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 w-full py-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
